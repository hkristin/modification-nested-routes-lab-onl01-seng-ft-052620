<%= form_for(@song) do |f| %>
  <%= artist_id_field(@song) %>
  <br>
  <label>Song title:</label><br>
  <%= f.text_field :title %><br>



  <% if @song.artist.nil? %>
    <%= f.select :artist_id, options_from_collection_for_select(Artist.all, :id, :name) %><br>
  <% end %>
  <%= f.hidden_field :author_id %>

 <%= f.submit %>

<% end %>
